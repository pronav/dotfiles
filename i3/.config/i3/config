for_window [class="Geeqie"] floating enable, move absolute position -3 px -19 px, focus
for_window [class="Transmission-gtk"] floating enable, focus
for_window [class="Firefox" instance="Toplevel"] floating enable
# for_window [class="URxvt" instance="tilda"] floating enable, move scratchpad
for_window [class="Termite" title="tilda"] floating enable, move absolute position -3 px -20 px, move scratchpad
for_window [class="smplayer"] floating enable, focus

