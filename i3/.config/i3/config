bindsym Print exec maim --hidecursor -s -b 4 | ifne sponge "Screen $(date '+%d-%m-%y %H:%M:%S').png"
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png
bindsym Control+Print exec maim -i $(xdotool getactivewindow) ~/window.png

